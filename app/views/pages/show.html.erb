<%= content_for :topbar do %>
	<% if current_user %>
		<ul>
			<li>
				<%= link_to "Edit this page", edit_page_path(@page) %>
			</li>
		</ul>
	<% end %>
<% end %>

<div class="container">
	<h1>
		<%= @page.title %>
	</h1>
	<div class="page-body">
		<%= @page.body.html_safe rescue "" %>
	</div>
</div>