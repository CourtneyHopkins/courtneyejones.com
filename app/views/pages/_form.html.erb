<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :slug %><br />
    <%= f.text_field :slug %>
  </div>
 	<div class="field">
    <%= f.label :redirect %><br />
    <%= f.text_field :redirect %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, class: "editor" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

